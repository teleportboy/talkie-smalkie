{
    "version": "2.0.0",
    "tasks": [
		{
			"type": "cppbuild",
			"label": "C",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/server/*.c",
				"${workspaceFolder}/server/sqlite3_api/sqlite3.c",
				"${workspaceFolder}/server/amqp_api/*.c",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-pthread",
				"-lrabbitmq",
				"-ldl"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}